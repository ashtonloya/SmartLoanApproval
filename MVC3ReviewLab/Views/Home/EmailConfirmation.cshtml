@model MVC3ReviewLab.Models.ContactViewModel

@{
    ViewBag.Title = "Confirmation";
}

<h2>Success!</h2>
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <p>
            Thank you for reaching out, @Model.Name!  Please see the details of your message below.
        </p>
        <p class="text-primary">
            Email: @Model.Email<br />
            Subject: @Model.Subject<br />
            Message: <em>@Model.Message</em>
        </p>
    </div>
</div>
